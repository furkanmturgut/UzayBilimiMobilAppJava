<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2A2E43"
    tools:context=".anasayfa.VideolarActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/geriVideo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/geri"
        ></ImageView>
    <TextView
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Canlı Yayınlar"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#FFF"
        android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="NASA TV"
              android:layout_gravity="center"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFF"
              android:textSize="20sp"></TextView>
          <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
              android:layout_width="match_parent"
              android:layout_height="200dp"
              app:videoId="21X5lGlDOfg"
              android:layout_marginTop="20dp"
              app:autoPlay="false"
              app:showYouTubeButton="false">

          </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>
          <TextView
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="ISS"
              android:layout_gravity="center"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFF"
              android:textSize="20sp"></TextView>
          <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
              android:layout_width="match_parent"
              android:layout_height="200dp"
              app:videoId="DDU-rZs-Ic4"
              android:layout_marginTop="20dp"
              app:autoPlay="false"
              app:showYouTubeButton="false">

          </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>
          <TextView
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="SpaceX"
              android:layout_gravity="center"
              android:gravity="center"
              android:textStyle="bold"
              android:textColor="#FFF"
              android:textSize="20sp"></TextView>
          <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
              android:layout_width="match_parent"
              android:layout_height="200dp"
              app:videoId="hAJV0WZtJvg"
              android:layout_marginTop="20dp"
              app:autoPlay="false"
              app:showYouTubeButton="false">

          </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

      </LinearLayout>

  </ScrollView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/jupiterbg"
    android:orientation="vertical"
    tools:context=".AnasayfaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="240dp"
                android:layout_width="380dp"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGezegen"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">
                        
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/gezegenler"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:textSize="25sp"
                            android:text="Gezegenler"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRoket"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/roket"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="150dp"
                            android:layout_height="35dp"
                            android:textSize="25sp"
                            android:text="Roketler"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="380dp"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVideo"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/istasyon"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="170dp"
                            android:layout_height="35dp"
                            android:textSize="20sp"
                            android:text="Videolar"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTr"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/tr"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="170dp"
                            android:layout_height="35dp"
                            android:textSize="20sp"
                            android:text="TÃ¼rkiye'de Uzay"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="380dp"
                android:layout_height="200dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHaber"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/haber"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="170dp"
                            android:layout_height="35dp"
                            android:textSize="20sp"
                            android:text="Haberler"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBilgi"
                    android:layout_width="170dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#363A4E">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/bilgi"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"></ImageView>
                        <TextView
                            android:textColor="#3497FD"
                            android:layout_marginTop="10dp"
                            android:layout_width="170dp"
                            android:layout_height="35dp"
                            android:textSize="20sp"
                            android:text="Bilgiler"
                            android:gravity="center"
                            android:textStyle="bold"
                            ></TextView>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </LinearLayout>



    </ScrollView>


</LinearLayout>